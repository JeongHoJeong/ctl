{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES5",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
       "@/*": ["src/*"]
    },
    "outDir": "./lib"
  },
  "include": ["src/**/*", "tests/**/*"]
}
